<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_space_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/space_title_bar"
        android:gravity="center_vertical" >

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/common_title_bar_color"
            android:onClick="backoff"
            android:src="@drawable/close_page" />

        <TextView
            android:id="@+id/add_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑任务"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_space_ops"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/layout_space_title_bar"
        android:background="@color/white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_save_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/task_create_bg"
            android:onClick="save_or_cancel"
            android:text="保存"
            android:textColor="@color/orange"
            android:textSize="14dp" />

        <Button
            android:id="@+id/add_cancel_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/task_create_bg"
            android:onClick="save_or_cancel"
            android:text="取消"
            android:textColor="@color/orange"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_space_form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layout_space_ops"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="任务内容"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etaskName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="项目类型"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/eprojectType"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="所属项目"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/ebelongPro"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="项目岗位"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/ebelongProPosition"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="完成时间"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/est"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>